<h1>ValeraItems</h1>

<p></p>

<% if @items.size == 0 %>
  <p> You didn't have items. Buy something </p>
<% else %>
  <% @items.each_with_index do |item, i| %>
    <li>
      <b> <%= item.name %> </b>
      <% item.stats.each do |stat, value| %>
        <% if !value.nil? %>
          <li> 
            <%= stat %>: +<%= value %>
          </li>
        <% end %>
      </li>
    <% end %>
    <%= button_to "Use", { controller: 'items', action: 'destroy', item_id: i }, method: :delete %>
    <p></p>
  <% end %>
<% end %>

