<div class="container">
<h1>#ValeraItems</h1>

<p></p>

<% if @valera.items.size == 0 %>
  <p> You didn't have items. Buy something </p>
<% else %>
  <% @valera.items.each do |item| %>
    <div class="row">
    <b> <%= item.name %> </b>
    <div class="col-sm-offset-2 col-sm-2">
      (
    <% item.stats.each do |stat, value| %>
      <% if !value.nil? %>
          <%= stat %>: +<%= value %>
      <% end %>
    <% end %>
    )
    </div>
    <%= button_to "Use", { controller: 'items', action: 'destroy', item_id: item.id }, method: :delete %>
    </div>
  <% end %>
<% end %>

 <p></p>
 <%= button_to "Back to Stats", { controller: 'valeras', action: 'show' }, method: :get %>
</div>
