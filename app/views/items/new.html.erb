<div class="container">
<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-4">#BuyItem</h1>
  </div>
</div>

<center>Money: <h2><%= @valera.money %></h2></center>
<p></p>
<%= form_with url: '/valera/item' do |f| %>
  <div class="form-group">
  <% @item_list.each do |curr_item| %>
    <div class="row">
    <div class="radio">
    <%= f.radio_button :item_id, curr_item.id %> <%= f.label :item_id, curr_item.name %>
    </div>
    <div class="col-sm-10">
      (
    <% curr_item.stats.each do |stat, value| %>
      <% if !value.nil? %>
        <%= stat%> : <%= value %>
      <% end %>
    <% end %>
    cost : <%= curr_item.money %>
    )
    </div>
    </div>
  <% end %>
  <center><div class="btn btn-secondary btn-sm"> <%= f.submit "Buy", class: "btn btn-secondary" %></div></center>

  
  </div>
<% end %>
<center><%= button_to "Back to Stats", { controller: 'valeras', action: 'show' }, method: :get %></center>
</div>
