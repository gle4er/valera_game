<div class="container">
<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-4">#ValeraEvent</h1>
  </div>
</div>
<p></p>
<div class="form-group">
<%= form_with url: '/valera/event' do |f|%>
  <% @event_list.each do |event| %>
    <div class="row">
    <div class="radio">
    <%= f.radio_button :id, event.id%> <%= f.label :id, event.name%>
    </div>
    <div class="col-sm-10">
      (
    <% event.stats.each do |stat, value| %>
      <% if !value.nil? %>
        <%= stat%> : <%= value %>
      <% end %>
    <% end %>
    )
    </div>
    </div>
    </br>
  <% end %>
  <center><div class="btn btn-secondary btn-sm"> <%= f.submit "Apply", class: "btn btn-secondary" %></div></center>
<% end %>
</div>

<center><div><%= button_to "Back to Stat", {controller: 'valeras', action: 'show' }, method: :get%></div></center>
</div>
