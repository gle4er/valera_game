<div class="container">
<h1>#ValeraEvent</h1>
<p></p>
<div class="form-group">
<%= form_with url: '/valera/event' do |f|%>
  <% @event_list.each do |event| %>
    <div class="row">
    <div class="radio">
    <%= f.radio_button :id, event.id%> <%= f.label :id, event.name%>
    </div>
    <div class="col-sm-10">
      (
    <% event.stats.each do |stat, value| %>
      <% if !value.nil? %>
        <%= stat%> : <%= value %>
      <% end %>
    <% end %>
    )
    </div>
    </div>
    </br>
  <% end %>
  <div class="row"><%= f.submit "Apply" %></div>
<% end %>
</div>

<div class="row"><%= button_to "Back to Stat", {controller: 'valeras', action: 'show' }, method: :get%></div>
</div>
